<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>{{post.title}}</title>

    <!-- Bootstrap core CSS -->
    {{!--
    <link href="vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet"> --}}
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">

    <!-- Custom fonts for this template -->
    {{!--
    <link href="vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css"> --}}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href='https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic' rel='stylesheet'
        type='text/css'>
    <link
        href='https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800'
        rel='stylesheet' type='text/css'>
    <link rel="icon" href="/img/blur-card-cardboard-211290.jpg" type="image/gif" sizes="16x16">
    <!-- Custom styles for this template -->
    <link href="/css/clean-blog.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/emoji/css/emojionearea.min.css">
    <style type="text/css">
        .comment-wrapper .panel-body {
            max-height: 650px;
            overflow: auto;
        }

        .comment-wrapper .media-list .media img {
            width: 64px;
            height: 64px;
            border: 2px solid #e5e7e8;
        }

        .comment-wrapper .media-list .media {
            border-bottom: 1px dashed #efefef;
            margin-bottom: 25px;
        }

        #mySidenav a {
            position: absolute;
            left: -80px;
            transition: 0.3s;
            padding: 15px;
            width: 100px;
            text-decoration: none;
            font-size: 20px;
            color: white;
            border-radius: 0 5px 5px 0;
            z-index: 1000;
        }

        #mySidenav a:hover {
            left: 0;
        }

        #about {
            top: 20px;
            background-color: #76D7C4;
        }

        header {
            background-size: cover;
            background-attachment: fixed;
            background-repeat: no-repeat;
            background-position: center center;
        }
    </style>
</head>

<body>

    <nav class="navbar" style="position:absolute;z-index:1000;width:100%;color:whitesmoke;">
        <div class="container-fluid">
            <div id="mySidenav" class="sidenav">
                <a href="/" id="about">Home</a>
            </div>
        </div>
    </nav>

    <!-- Page Header -->
    <header class="masthead" style="background-image: url('{{ post.image }}');" id="masthead_post">
        <div class="overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="row">
                        <div class="col-md-4 col-md-offset-4" style="text-align:center;">
                            <div class="post-heading">
                                <h1>{{ post.title }}</h1>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Post Content -->
    <article>
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-md-offset-2" id="content">
                    {{{ post.content }}}
                </div>
            </div>
        </div>
    </article>

    <hr>
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="row">
                    <div class="col-md-10 col-md-offset-1" style="text-align:center;">
                        <a href="/delete/confirm/{{post._id}}" style="text-decoration:none;" class="btn btn-primary"><i
                                class="fa fa-trash"></i>
                            Delete Post.</a>

                        <a href="/edit/{{post._id}}" style="text-decoration: none;" class="btn btn-primary"><i
                                class="fa fa-edit"></i> Edit Post</a>
                        <br><br>
                        {{!-- <a href="/" style="text-decoration:none;"><i class="fa fa-arrow-left"></i> Back to Home.</a> --}}
                    </div>
                </div>
            </div>
        </div>
        <hr>
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                {{#if DelObj}}
                {{#if DelObj.err}}
                <div class="alert alert-danger alert-dismissable">
                    {{DelObj.err}}
                    <a href="#" class="close alert-link pull-right" data-dismiss="alert">&times;</a>
                </div>
                {{/if}}
                {{/if}}
            </div>

        </div>
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                {{#if editObj}}
                {{#if editObj.err}}
                <div class="alert alert-danger alert-dismissable">
                    {{editObj.err}}
                    <a href="#" class="close alert-link pull-right" data-dismiss="alert">&times;</a>
                </div>
                {{/if}}
                {{/if}}
            </div>

        </div>

        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                {{#if updateError}}
                {{#if updateError.err}}
                <div class="alert alert-danger alert-dismissable">
                    {{updateError.err}}
                    <a href="#" class="close alert-link pull-right" data-dismiss="alert">&times;</a>
                </div>
                {{/if}}
                {{/if}}
            </div>
        </div>

        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                {{#if successObj}}
                {{#if successObj.success}}
                <div class="alert alert-success alert-dismissable">
                    {{successObj.success}}
                    <a href="#" class="close alert-link pull-right" data-dismiss="alert">&times;</a>
                </div>
                {{/if}}
                {{/if}}
            </div>
        </div>

        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                {{#if commentObj}}
                {{#if commentObj.success}}
                <div class="alert alert-success alert-dismissable">
                    {{commentObj.success}}
                    <a href="#" class="close alert-link pull-right" data-dismiss="alert">&times;</a>
                </div>
                {{/if}}
                {{/if}}
            </div>
        </div>

        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                {{#if comErrObj}}
                {{#if comErrObj.err}}
                <div class="alert alert-danger alert-dismissable">
                    {{comErrObj.err}}
                    <a href="#" class="close alert-link pull-right" data-dismiss="alert">&times;</a>
                </div>
                {{/if}}
                {{/if}}
            </div>
        </div>
        <div class="row">
            <div class="col-md-8 col-md-offset-2" style="text-align:center;">
                <a href="/post/pdf/{{post._id}}" class="btn btn-info">Save as PDF.</a>
            </div>
        </div>
    </div>

    <br><br>
    <div class="container">
        <div class="row bootstrap snippets">
            <div class="col-md-10 col-md-offset-1 col-sm-12" style="margin-left: 10%;">
                <div class="comment-wrapper">
                    <div class="panel panel-info">
                        <div class="panel-heading">
                            Comment panel
                        </div>
                        <div class="panel-body">
                            <form action="/post/comment/{{post._id}}" method="post">
                                <div class="form-group">
                                    <textarea class="form-control" placeholder="write a comment..." rows="3"
                                        name="content" required="true" id="commentEmoji"></textarea>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-info pull-right">Post</button>
                                </div>
                            </form>
                            <div class="clearfix"></div>
                            <hr>
                            <ul class="media-list">
                                {{#each comments}}
                                <li class="media">
                                    <a href="#" class="pull-left">
                                        {{#if this.userImage}}
                                        <img src="{{this.userImage}}" alt="" class="img-circle">
                                        {{else}}
                                        <img src="https://bootdey.com/img/Content/user_1.jpg" alt="" class="img-circle">
                                        {{/if}}
                                    </a>
                                    <div class="media-body">
                                        <span class="text-muted pull-right">
                                            <small class="text-muted">{{this.createdAt}}</small>
                                            &nbsp;
                                            <a href="/delete/comment/{{this._id}}" class="pull-right"
                                                style="color:grey;" id="delete"><i class="fa fa-times"></i></a>
                                        </span>
                                        <strong class="text-success">@{{this.name}}</strong>
                                        <p>
                                            {{this.content}}
                                        </p>
                                    </div>
                                </li>
                                {{/each}}
                            </ul>
                        </div>
                        {{#if disableView.view}}
                        {{#if views}}
                        {{#if views.views}}
                        <div class="panel-footer" style="background-color: transparent;">
                            <span class="label label-info">Total Views: {{views.views}}</span>
                        </div>
                        {{/if}}
                        {{/if}}
                        {{/if}}
                    </div>
                </div>

            </div>
        </div>
    </div>

    {{> footer }}

    <!-- Bootstrap core JavaScript -->
    {{!--
    <script src="../public/vendor/jquery/jquery.min.js"></script> --}}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    {{!--
    <script src="../public/vendor/bootstrap/js/bootstrap.bundle.min.js"></script> --}}
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>

    <!-- Custom scripts for this template -->
    <script src="/js/clean-blog.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.10.3/moment.js"></script>
    <script>
        var time = moment().format('YYYY');
        var data = `Copyright &copy; Our Blog ${time}`;
        document.getElementsByClassName('copyright')[0].innerHTML = data;
    </script>
    <script src="/emoji/js/emojionearea.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#commentEmoji').emojioneArea({
                pickerPosition: 'bottom'
            });
        });
    </script>
</body>

</html>